<h1>Employees</h1>
<table>
	<thead>
		<th>Employee Name</th>
		<th>Employee Title</th>
	</thead>
  <tbody>
  	{{#each employees}}
    <tr>
      <td>{{EmployeeName}}</td>
      <td>{{EmployeeTitle}}</td>
      <td>
        <a href="/employees/{{employee_id}}/edit">Edit</a>
      </td>
      <td>
        <form action = "/employees/{{employee_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{employee_id}}">
          <input type="submit" name="Delete" value="Delete">
        </form>
      </td>
  	</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h2>Add An Employee</h2>
<form action="/employees" method="POST">
  First Name: <input id="fname" type="text" name="fname"><br>
  Last Name: <input id="lname" type="text" name="lname"><br>
  Role: <select name="roleID">
    {{#each roles}}
    <option value="{{role_id}}">{{title}}</option>
    {{/each}}
  </select><br>
  <input type="submit" name="AddEmployee" value = "Add Employee">
</form>
